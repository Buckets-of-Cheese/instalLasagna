<button class="notes-button note grow" id="show-note-{{this.id}}">Notes</button>
      <span class="note-text white dtc v-mid child bg-black-40 pa1" style="display:none;" id="note-text-{{this.id}}">
    {{notes}}
  </span>
{{/if}}




</div>

